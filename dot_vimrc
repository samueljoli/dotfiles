" -----------------------------------------------------------------------------
" Vim >= 8. This assume you to have Plug installed.
" -----------------------------------------------------------------------------

source $HOME/.vim/init/pre.vimrc               " pre configurations
source $HOME/.vim/init/plug.vimrc              " plugin loader
source $HOME/.vim/init/general.vimrc           " Plugin specific configurations
source $HOME/.vim/init/plugins/settings.vimrc  " Plugin specific configurations
